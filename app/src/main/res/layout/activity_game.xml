<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5FA"
    tools:context=".ActivityGame">

    <!-- ===== HEADER ===== -->

    <TextView
        android:id="@+id/tvGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ðŸŒ  Guess a Country"
        android:textColor="#1F2937"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnAiHelp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/btnAiHelp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#EEF2FF"
        android:text="ðŸ¤– Hint"
        android:textAllCaps="false"
        android:textColor="#4A6CF7"
        android:textSize="13sp"
        android:minWidth="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvGame"
        app:layout_constraintTop_toTopOf="@+id/tvGame" />

    <!-- ===== INPUT ROW ===== -->

    <AutoCompleteTextView
        android:id="@+id/etGuess"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:hint="Enter country here..."
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#1F2937"
        android:textColorHint="#9CA3AF"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/btnEnterCountry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGame" />

    <Button
        android:id="@+id/btnEnterCountry"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#4A6CF7"
        android:text="Enter âžœ"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:minWidth="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/etGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etGuess"
        app:layout_constraintTop_toTopOf="@+id/etGuess" />

    <!-- ===== SUGGESTIONS OVERLAY ===== -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSuggestions"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/etGuess"
        app:layout_constraintStart_toStartOf="@+id/etGuess"
        app:layout_constraintTop_toBottomOf="@+id/etGuess" />

    <!-- ===== COLUMN HEADERS ===== -->

    <LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="#E5E7EB"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGuess">

        <TextView
            android:id="@+id/tvCountry2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="ðŸ³ï¸ Country"
            android:textColor="#374151"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContinent2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ—ºï¸ Continent"
            android:textColor="#374151"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReligion2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ•Šï¸ Religion"
            android:textColor="#374151"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLandLocked2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ”ï¸ Land"
            android:textColor="#374151"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHasNoam2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="âœˆï¸ Noam"
            android:textColor="#374151"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPopulation2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ‘¥ Pop."
            android:textColor="#374151"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ===== GUESSES RECYCLER VIEW ===== -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerRow" />

    <!-- ===== WIN OVERLAY ===== -->

    <ImageView
        android:id="@+id/confetti"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/tvWinMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:text="ðŸŽ‰ You Win! ðŸŽ‰"
        android:textColor="#4A6CF7"
        android:textSize="42sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confetti" />

</androidx.constraintlayout.widget.ConstraintLayout>